# /etc/mysql/mariadb.conf.d/50-server.cnf
# Configurazione MariaDB ottimizzata per WordPress con BuddyPress/bbPress
# Server: ~3000 utenti, PHP 8.3, Nginx 1.26, Divi 5

[mysqld]

# === CONFIGURAZIONI BASE ===
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
lc-messages-dir = /usr/share/mysql

# === NETWORKING E CONNESSIONI ===
bind-address = 127.0.0.1
max_connections = 300
max_user_connections = 250
thread_cache_size = 50
back_log = 100
wait_timeout = 600
interactive_timeout = 600
connect_timeout = 10

# === CONFIGURAZIONI MEMORIA (per server con 6-8GB RAM) ===
# Allocazione aggressiva per massimizzare le performance
innodb_buffer_pool_size = 3G
innodb_buffer_pool_instances = 8
innodb_log_file_size = 512M
innodb_log_buffer_size = 128M
innodb_flush_log_at_trx_commit = 2

# === CACHE E PERFORMANCE ===
query_cache_type = 1
query_cache_size = 256M
query_cache_limit = 8M
tmp_table_size = 256M
max_heap_table_size = 256M
table_open_cache = 8000
table_definition_cache = 2000

# === CONFIGURAZIONI INNODB (ottimizzate per WordPress) ===
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_thread_concurrency = 0
innodb_lock_wait_timeout = 50
innodb_rollback_on_timeout = 1
innodb_print_all_deadlocks = 1
innodb_adaptive_hash_index = 1
innodb_change_buffering = inserts
innodb_old_blocks_time = 1000
innodb_stats_on_metadata = 0

# === OTTIMIZZAZIONI PER BUDDYPRESS/BBPRESS ===
# Questi plugin generano molte query complesse su tabelle di attività
innodb_sort_buffer_size = 16M
innodb_online_alter_log_max_size = 512M
optimizer_search_depth = 62
optimizer_prune_level = 1

# === CONFIGURAZIONI MYISAM (per tabelle wp_options e simili) ===
key_buffer_size = 256M
read_buffer_size = 4M
read_rnd_buffer_size = 16M
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 2G
myisam_repair_threads = 2

# === SLOW QUERY LOG (per monitoraggio) ===
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2
log_queries_not_using_indexes = 1
min_examined_row_limit = 1000

# === SICUREZZA ===
local_infile = 0
skip_show_database
skip_symbolic_links

# === CHARSET E COLLATION (WordPress standard) ===
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# === CONFIGURAZIONI SPECIFICHE PER DIVI ===
# Divi può generare query complesse per il visual builder
join_buffer_size = 8M
sort_buffer_size = 8M
bulk_insert_buffer_size = 32M

# === BINARY LOGGING (opzionale per backup incrementali) ===
# Decommenta se necessario per repliche o backup avanzati
# log_bin = /var/log/mysql/mysql-bin.log
# binlog_format = ROW
# expire_logs_days = 7
# max_binlog_size = 100M

# === CONFIGURAZIONI AVANZATE ===
sql_mode = ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
max_allowed_packet = 64M
thread_stack = 192K
transaction_isolation = READ-COMMITTED

[mysql]
default_character_set = utf8mb4

[client]
default_character_set = utf8mb4

# === NOTE PER L'OTTIMIZZAZIONE ===
# 1. Monitora regolarmente SHOW PROCESSLIST e SHOW ENGINE INNODB STATUS
# 2. Usa phpMyAdmin o Adminer per analizzare le query lente
# 3. Considera l'uso di Redis/Memcached per il caching delle sessioni
# 4. Per BuddyPress, ottimizza le query delle attività con indici personalizzati
# 5. Monitora l'uso della memoria con: SHOW VARIABLES LIKE '%buffer%'